<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="htcAutoCompleteTextViewStyleDefault" parent="@android:style/Widget.Holo.AutoCompleteTextView">

        <!-- skinable attribute -->
        <item name="android:entries">@array/autocompletetextview_backgrounds</item>
        <!-- skinable attribute -->
        <item name="android:popupBackground">@drawable/common_dropdown_background</item>
        <!-- skinable attribute -->
        <item name="overlay_color">?attr/category_color</item>
        <item name="android:dropDownVerticalOffset">-1px</item>
        <item name="android:dropDownHorizontalOffset">-1px</item>
        <item name="android:dropDownWidth">-1px</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/input_default_m</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:textColorHint">@color/light_primaryfont_disable_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:dropDownSelector">@drawable/list_selector_light</item>
        <item name="android:textColorPrimary">@color/HtcAutoCompleteTextView_color_empty</item>
        <item name="android:panelBackground">@drawable/common_inputfield_rest</item>
        <item name="android:panelFullBackground">@drawable/common_inputfield_pressed</item>
        <item name="android:textAppearanceLarge">@style/input_default_m</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="htcAutoCompleteTextViewStyleDefault.Dark">
        <!-- skinable attribute -->
        <item name="android:popupBackground">@drawable/common_popupmenu_top</item>
        <item name="android:dropDownSelector">@drawable/list_selector_dark</item>
        <item name="android:textColorHint">@color/dark_primaryfont_disable_color</item>
        <item name="android:panelBackground">@drawable/common_b_inputfield_rest</item>
        <item name="android:panelFullBackground">@drawable/common_b_inputfield_pressed</item>
        <item name="android:textAppearanceLarge">@style/b_button_primary_l</item>
        <item name="android:disabledAlpha">0.4</item>
    </style>

    <style name="htcEditTextStyleDefault" parent="@android:style/Widget.Holo.EditText">

        <!-- skinable attribute -->
        <item name="android:entries">@array/autocompletetextview_backgrounds</item>
        <!-- skinable attribute -->
        <item name="overlay_color">?attr/category_color</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/input_default_m</item>
        <item name="android:textColor">@color/list_primary</item>
        <item name="android:textColorHint">@color/light_primaryfont_disable_color</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorPrimary">@color/HtcEditText_color_empty</item>
        <item name="android:panelBackground">@drawable/common_inputfield_rest</item>
        <item name="android:panelFullBackground">@drawable/common_inputfield_pressed</item>
        <item name="android:textAppearanceLarge">@style/input_default_m</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>

    <style name="htcEditTextStyleDefault.Dark">
        <item name="android:textColorHint">@color/dark_primaryfont_disable_color</item>
        <item name="android:panelBackground">@drawable/common_b_inputfield_rest</item>
        <item name="android:panelFullBackground">@drawable/common_b_inputfield_pressed</item>
        <item name="android:textAppearanceLarge">@style/b_button_primary_l</item>
        <item name="android:disabledAlpha">0.4</item>
    </style>
</resources>
