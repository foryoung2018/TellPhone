<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="HtcListView" parent="android:style/Widget.Holo.ExpandableListView">
        <item name="android:divider">@null</item>
        <item name="android:childDivider">@drawable/inset_list_divider</item>
        <item name="android:listSelector"> @drawable/list_selector_light </item>
        <!-- HtcExpandableListView's group divder's height-->
        <item name="android:height">0px</item>
        <!-- HtcExpandableListView's group divder's height End-->
        <!-- DividerController's divider-->
        <item name="android:horizontalDivider">@drawable/common_list_divider</item>
        <item name="android:insetLeft">@dimen/common_list_divider_margin</item>
        <!-- DividerController's divider End-->
        <!-- HtcExpandableListView child item's background color -->
        <item name="android:itemBackground">@color/HtcExpandableListView_childItem_backgroundColor</item>
        <!-- HtcExpandableListView child item's background colorEND -->
    </style>

    <style name="HtcListView.Dark">
        <item name="android:divider">@null</item>
        <item name="android:childDivider">@drawable/inset_list_divider_dark</item>
        <item name="android:listSelector"> @drawable/list_selector_dark </item>
        <item name="android:horizontalDivider">@drawable/common_b_div_land</item>
        <item name="android:itemBackground">@color/HtcExpandableListView_childItem_backgroundColor_dark</item>
    </style>
</resources>
