        <attr name="htcProgressBarStyle" format="reference" />
        <attr name="htcProgressBarStyleIndeterminate" format="reference" />
        <attr name="htcProgressBarStyleIndeterminateSmall" format="reference" />
        <attr name="htcProgressBarStyleHorizontalFull" format="reference" />
        <!-- HtcSeekBar -->
        <attr name="htcSeekBarStyle" format="reference" />
        <!-- HtcPopupContainer -->
        <attr name="htcPopupContainerStyle" format="reference" />
        <!-- add for sense60 start -->
        <attr name="htcListItemSerialNumberStyle" format="reference" />
        <!-- add for sense60 end -->
        <!--HtcGridItem-->
        <attr name="htcGridItemStyle" format="reference" />
        <!-- RecipientBlock -->
        <attr name="htcRecipientBlock" format="reference"/>
        <!-- HtcWizardActivity -->
        <attr name="htcWizardActivityStyle" format="reference" />
        <!-- HtcButtonWizardActivityStyle -->
        <attr name="htcButtonWizardActivityStyle" format="reference" />
        <!-- HtcRadioListWizardActivityStyle -->
        <attr name="htcRadioListWizardActivityStyle" format="reference" />
    </declare-styleable>
</resources>
