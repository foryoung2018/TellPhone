<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ActionBarTextView">
        <attr name="android:textAppearance" />
        <attr name="android:maxLines" />
    </declare-styleable>
    <declare-styleable name="ActionBarSize">
        <attr name="android:actionBarSize" />
    </declare-styleable>
    <declare-styleable name="HtcActionBarSearch">
        <attr name="android:src" />
        <attr name="android:textAppearance" />
        <attr name="android:drawablePadding" />
        <!-- Icon drawable paddingLeft -->
        <attr name="android:insetLeft" />
        <attr name="android:insetTop" />
    </declare-styleable>
    <declare-styleable name="HtcActionBarRefresh">
        <attr name="android:src" />
    </declare-styleable>
    <declare-styleable name="HtcActionBar">

        <!-- actionbar progress view margin start -->
        <attr name="android:progressBarPadding" />
        <attr name="android:homeAsUpIndicator" />
        <!-- should backup view need flag M2 -->
        <attr name="android:autoStart" />
        <attr name="android:background" />
    </declare-styleable>
    <declare-styleable name="HtcActionBarDropDown">
        <!-- single  text style -->
        <attr name="android:textAppearance" />
        <!-- two text primary text style -->
        <attr name="android:titleTextStyle" />
        <!-- two text secondary text style -->
        <attr name="android:subtitleTextStyle" />
        <!-- dropdown icon -->
        <attr name="android:drawable" />
        <!-- dropdown icon padding with text -->
        <attr name="android:drawablePadding" />
        <!-- single text two line style -->
        <attr name="android:textAppearanceSmall" />
        <!--  Primary offset-->
        <attr name="android:innerRadiusRatio" />
        <!--  Secondary offset-->
        <attr name="android:thicknessRatio" />
    </declare-styleable>
    <declare-styleable name="HtcActionButton">

        <!-- actionbar item view width percentage -->
        <attr name="android:keyWidth" />
    </declare-styleable>

    <attr name="htcActionBarProgressBarStyle" format="reference" />
    <attr name="htcActionBarStyle" format="reference" />
    <attr name="actionBarSearchStyle" format="reference" />
    <attr name="actionBarRefreshStyle" format="reference" />
    <attr name="actionBarDropDownStyle" format="reference" />
    <attr name="htcActionButtonStyle" format="reference" />

</resources>