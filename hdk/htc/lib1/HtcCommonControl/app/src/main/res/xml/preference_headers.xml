<!-- This is a primitive example showing the different types of preferences
    available. -->

<preference-headers xmlns:android="http://schemas.android.com/apk/res/android">

    <header
        android:fragment="com.htc.sense.commoncontrol.demo.htcpreference.PreferenceWithHeaders$Prefs1Fragment"
        android:icon="@drawable/ic_settings_applications" android:title="@string/title_header"
        android:summary="@string/summary_header" />

    <header
        android:fragment="com.htc.sense.commoncontrol.demo.htcpreference.PreferenceWithHeaders$Prefs2Fragment"
        android:icon="@drawable/ic_settings_display" android:title="@string/title_other_header"
        android:summary="@string/summary_other_header">
        <!-- Arbitrary key/value pairs can be included with a header as arguments
            to its fragment. -->
        <extra android:name="someKey" android:value="someHeaderValue" />
    </header>

    <header android:icon="@drawable/ic_settings_display"
        android:title="@string/title_intent" android:summary="@string/summary_intent">
        <intent android:action="android.intent.action.VIEW"
            android:data="http://www.android.com" />
    </header>

</preference-headers>

