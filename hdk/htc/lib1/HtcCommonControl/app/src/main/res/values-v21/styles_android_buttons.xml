<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="RaisedButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/btn_raised_background</item>
        <item name="android:textColor">@color/btn_raised_color</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="FlatButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/btn_flat_background</item>
        <item name="android:textColor">@color/btn_raised_color</item>
    </style>

    <style name="CustomRaisedButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/btn_custom_raised_background</item>
        <item name="android:textColor">@color/btn_raised_color</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="CustomFlatButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:background">@drawable/btn_custom_flat_background</item>
        <item name="android:textColor">@color/btn_custom_flat_color</item>
    </style>

</resources>