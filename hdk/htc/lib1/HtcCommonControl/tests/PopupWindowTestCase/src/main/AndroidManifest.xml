<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.htc.popupWindow.aut"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/HtcDeviceDefault" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.htc.popupWindow.aut.popupcontainer.HtcSeekBarPopupWindowDemo"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.htc.popupWindow.aut.popupmenu.ExpandableListPopupMenuDemo"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.htc.popupWindow.aut.popupmenu.ListPopupMenuDemo"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.htc.popupWindow.aut.popupmenu.PopupMenuDemo"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.htc.popupWindow.aut.popupmenu.ListPopupWindowDemo"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>