<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PopupBubbleWindow">
        <attr name="popupBubbleBackground" format="reference|color" />
        <attr name="popupBubbleTriangle" format="reference" />
        <attr name="popupBubbleLeftTriangle" format="reference" />
        <attr name="popupBubbleAnimationStyle" format="reference" />
        <attr name="android:drawable" />
        <attr name="android:drawableLeft" />
        <!-- dropDownDownTopCenter style -->
        <attr name="android:dropDownAnchor"/>
        <!-- dropDownDownTopEast style -->
        <attr name="android:dropDownHeight"/>
        <!-- dropDownDownTopWest style -->
        <attr name="android:dropDownSelector"/>
        <!-- dropDownUpBottomCenter style -->
        <attr name="android:dropDownWidth"/>
        <!-- dropDownCenter style -->
        <attr name="android:dropDownHintAppearance" />
        <!-- define background -->
        <attr name="android:background" />
        <!-- define arrow shadow background -->
        <attr name="android:panelBackground" />
        <!-- define icon background -->
        <attr name="android:panelFullBackground" />
        <!-- define tipsText TextAppearance -->
        <attr name="android:panelTextAppearance" />
    </declare-styleable>
    <declare-styleable name="HtcPopupContainer">
        <attr name="android:padding" />
        <attr name="android:layout_margin" />
        <attr name="android:minHeight" />
        <attr name="android:drawable" />
    </declare-styleable>
    <declare-styleable name="PopupWindowDrawble">
        <attr name="android:state_above_anchor" />
        <attr name="android:gravity" />
        <attr name="android:drawable" />
    </declare-styleable>
</resources>