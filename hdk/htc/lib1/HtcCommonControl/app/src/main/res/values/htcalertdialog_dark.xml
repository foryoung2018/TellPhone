<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- because Theme.Holo.Light.Dialog.Alert is private, I can not refer it directly -->
    <style name="HtcAlertDialogTheme.Dark" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">89.5%p</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <!-- above 4+1 items are from Theme.Holo.Light.Dialog.Alert -->
        <item name="android:alertDialogStyle">@style/HtcAlertDialogStyleDark</item>
        <item name="android:windowTitleStyle">@style/HtcAlertDialogWindowTitleStyle</item>
        <item name="android:progressBarStyleLarge">@style/HTCProgressBarStyle.Indeterminate.Dark
        </item>
        <item name="android:progressBarStyleHorizontal">@style/HTCProgressBarStyle.Dark</item>
        <item name="android:textAppearanceLarge">@style/HtcAlertDialogWindowTitleStyle.Dark</item>
        <!-- this attribute is used in alert_dialog -->
        <item name="android:textAppearanceMedium">@style/dark_list_body_primary_m</item>
        <item name="android:textColorAlertDialogListItem">@color/dark_primaryfont</item>
        <!-- used for text message in content -->
        <item name="android:buttonBarStyle">@style/HtcAlertDialogButtonBarStyle.Dark</item>
        <item name="android:buttonBarButtonStyle">@style/HtcAlertDialogButtonBarButtonStyle.Dark
        </item>
        <item name="android:listDividerAlertDialog">@null</item>
        <item name="android:textAppearanceListItemSmall">@style/darklist_primary_m</item>
        <item name="android:listViewStyle">@style/HtcListView.Dark</item>
        <item name="android:progressBarStyle">@style/HTCProgressBarStyle.Indeterminate.Dark</item>
    </style>

    <style name="HtcAlertDialogStyleDark">
        <item name="android:fullDark">@drawable/common_dialogbox_full_dark</item>
        <item name="android:topDark">@drawable/automotive_common_dialogbox_top_dark</item>
        <item name="android:centerDark">@drawable/automotive_common_dialogbox_center_dark</item>
        <item name="android:bottomDark">@drawable/automotive_common_dialogbox_bottom_dark</item>
        <item name="android:bottomMedium">@drawable/automotive_common_dialogbox_bottom_medium</item>
        <item name="android:centerBright">@drawable/automotive_common_dialogbox_center_dark</item>
        <item name="android:bottomBright">@drawable/automotive_common_dialogbox_bottom_dark</item>
    </style>

    <style name="HtcAlertDialogWindowTitleStyle.Dark">
        <item name="android:textColor">@color/dark_primaryfont_color</item>
    </style>

    <style name="HtcAlertDialogButtonBarStyle.Dark">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:divider">@drawable/common_b_div_footer</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">@dimen/margin_m</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="HtcAlertDialogButtonBarButtonStyle.Dark"
           parent="@style/fixed_b_separator_secondary_m">
        <item name="android:background">@drawable/list_selector_dark</item>
        <item name="android:textColor">@color/dark_primaryfont</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>

</resources>
