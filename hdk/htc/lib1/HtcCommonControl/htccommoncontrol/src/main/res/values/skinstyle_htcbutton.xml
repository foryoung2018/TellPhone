<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:htc="http://schemas.android.com/apk/res/com.htc">

    <style name="HtcButton">
        <!-- skinable attribute -->
        <item name="android:drawable">@drawable/common_b_button_rest</item>
        <item name="android:centerColor">#33FFFFFF</item>
        <item name="android:textAppearance">@style/b_button_primary_l</item>
        <item name="android:listSelector">@drawable/list_selector_dark</item>
        <item name="android:background">@drawable/button_selector_dark</item>
        <item name="android:disabledAlpha">0.4</item>
    </style>

    <style name="HtcButton.Light">
        <!-- skinable attribute -->
        <item name="android:drawable">@drawable/common_button_rest</item>
        <item name="android:centerColor">#19000000</item>
        <item name="android:textAppearance">@style/button_primary_l</item>
        <item name="android:listSelector">@drawable/list_selector_light</item>
        <item name="android:background">@drawable/button_selector_light</item>
        <item name="android:disabledAlpha">0.5</item>
    </style>
    <!-- Below button style used for Dialog -->
    <style name="ButtonBarButtonStyle" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textAppearance">@style/fixed_separator_secondary_m</item>
        <item name="android:paddingStart">@dimen/margin_s</item>
        <item name="android:paddingEnd">@dimen/margin_s</item>
        <item name="android:paddingTop">@dimen/margin_m</item>
        <item name="android:paddingBottom">@dimen/margin_m</item>
    </style>

    <style name="ButtonBarStyle" parent="@android:style/Holo.ButtonBar">
        <item name="android:background">@drawable/list_selector_light</item>
        <item name="android:divider">@drawable/common_div</item>
    </style>


    <style name="HtcProgressButton">
        <item name="android:itemBackground">@color/ap_background_color</item>
        <item name="overlay_color">@color/ap_background_color</item>
        <item name="android:itemIconDisabledAlpha">0.3</item>
    </style>

    <style name="HtcProgressButton.Light">
        <item name="android:itemBackground">@android:color/black</item>
        <item name="overlay_color">@null</item>
        <item name="android:itemIconDisabledAlpha">0.6</item>
    </style>

</resources>