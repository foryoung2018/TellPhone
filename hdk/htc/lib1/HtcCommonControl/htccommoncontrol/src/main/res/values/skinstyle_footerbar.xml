<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- HtcFooter and HtcFooterButton Start -->
    <style name="FooterBarStyle">
        <item name="android:layout_height">@dimen/htc_footer_height</item>
        <item name="android:layout_width">@dimen/htc_footer_height</item>
        <item name="def_child_weight">1.0</item>
        <!-- skinable attribute -->
        <item name="android:src">@drawable/footerbkg</item>
        <!-- add for sense60 start -->
        <item name="android:divider">@drawable/common_footer_divider</item>
        <item name="footer_display_mode">mode_default</item>
        <!-- add for sense60 end -->
        <!-- landscape width for footers -->
        <item name="android:width">@dimen/htc_footer_width</item>
        <!-- portrait height for footers -->
        <item name="android:height">@dimen/htc_footer_height</item>
        <item name="android:thumbTextPadding">@dimen/footer_two_side_padding</item>
        <item name="android:dashGap">@dimen/margin_m</item>
    </style>
    <style name="FooterBarStyle.Dark">
        <item name="android:src">@drawable/footerbkg_dark</item>
        <item name="android:divider">@drawable/common_footer_divider_dark</item>
    </style>
    <style name="FooterBarStyle.Full">
        <item name="backgroundMode">full</item>
    </style>
    <style name="FooterBarButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawable">@array/htcbutton_drawables</item>
        <item name="overlay_color">?attr/category_color</item>
        <item name="android:listSelector">@drawable/list_selector_light</item>
        <!-- right with image -->
        <item name="android:textAppearanceSmall">@style/fixed_label_off_m</item>
        <!-- right without image -->
        <item name="android:textAppearanceSmallInverse">@style/fixed_separator_secondary_xs</item>
        <!-- bottom with image -->
        <item name="android:textAppearanceLarge">@style/fixed_label_off_m</item>
        <!-- bottom without image -->
        <item name="android:textAppearanceLargeInverse">@style/fixed_separator_secondary_m</item>
</style>
    <style name="FooterBarButtonStyle.Dark">
        <item name="android:listSelector">@drawable/list_selector_dark</item>
        <!-- right with image -->
        <item name="android:textAppearanceSmall">@style/fixed_label_on_m</item>
        <!-- right without image -->
        <item name="android:textAppearanceSmallInverse">@style/fixed_list_body_xs</item>
        <!-- bottom with image -->
        <item name="android:textAppearanceLarge">@style/fixed_label_on_m</item>
        <!-- bottom without image -->
        <item name="android:textAppearanceLargeInverse">@style/fixed_b_button_primary_m</item>
    </style>
    <!-- HtcFooter and HtcFooterButton End -->
</resources>