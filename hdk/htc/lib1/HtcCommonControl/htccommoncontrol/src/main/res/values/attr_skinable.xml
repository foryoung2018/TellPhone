<resources>
    <declare-styleable name="HtcTheme">
        <!-- HTC alert dialog style -->
        <attr name="htcAlertDialogStyle" format="reference" />
        <!-- Htc Date/Time Picker -->
        <attr name="dateTimePickerStyle" format="reference" />
        <!-- Default PopupBubbleWindow style. -->
        <attr name="popupBubbleWindowStyle" format="reference" />
        <!-- Default ListPopupBubbleWindow style. -->
        <attr name="listPopupBubbleWindowStyle" format="reference" />
        <!-- Default ExpandableListView style for drop downs. -->
        <attr name="dropDownExpandableListViewStyle" format="reference" />
        <!-- Default ListView style for drop downs. -->
        <attr name="htcDropDownListViewStyle" format="reference" />
        <attr name="attr_progress_dialog_drawable" format="color|reference" />
        <!-- commoncontrol font style of color skin change -->
        <attr name="skin_b_button_primary" format="color|reference" />
        <!-- Default ListItem style -->
        <attr name="htcListItemStyle" format="reference" />
        <!-- HtcSpinner -->
        <!-- Attr spinnerStyle conflict with AppCompat v7 -->
        <!--<attr name="spinnerStyle" format="reference" />-->

        <!-- Common color for skin change -->
        <attr name="skin_color" format="reference" />
        <!-- HtcReorderListView -->
        <attr name="htcReorderListViewStyle" format="reference" />
        <!-- QuickContactBadge -->
        <attr name="quickContactBadgeStyle" format="reference" />
        <!-- HtcListItemSeparator -->
        <attr name="htcListItemSeparatorStyle" format="reference" />
        <!-- HtcListView -->
        <attr name="htcListViewStyle" format="reference" />
        <!-- HtcAutoCompleteText -->
        <attr name="htcAutoCompleteTextViewStyle" format="reference" />
        <!-- HtcEditText -->
        <attr name="htcEditTextStyle" format="reference" />
        <!-- Footer -->
        <attr name="footerStyle" format="reference" />
        <attr name="footerButtonStyle" format="reference" />
        <!-- HtcPreferenceSeekBar -->
        <attr name="HtcPreferenceSeekBarAttr" format="reference" />
